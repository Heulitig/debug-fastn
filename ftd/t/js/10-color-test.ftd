-- ftd.column:
width: fill-container
background.solid: pink
background.solid if { value % 3 == 0 }: $bg-og
background.solid if { value % 3 == 1 }: $bg-bp

-- ftd.text:
color: red
color if { value % 3 == 0 }: $og
color if { value % 3 == 1 }: $bp
$on-click$: $increment($a = $value)
padding.px: 40
role: $rtype



